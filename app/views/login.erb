<div class="col-md-4">
  <% if flash[:message] %>
  <div class="alert alert-danger">
    <%=flash[:message]%>
  </div>
  <% end %>
  <div class="card">
    <div class="card-header">
        <h1 class="card-title text-primary">Login</h1>
    </div>
    <div class="card-body">
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">@</div>
              </div>
              <input class="form-control form-control-lg" id="username" type="text" name="username" placeholder="Enter username">
          </div>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control form-control-lg" id="password" type="password" name="password" placeholder="Enter your password">
        </div>
        <input type="submit" id="submit" class="btn btn-primary" value="Log In">
        <small class="form-text text-muted"><a href="/signup" class="card-link">Don't have an account? Sign up here!</a></small>
      </form>
    </div>
  </div>
</div>