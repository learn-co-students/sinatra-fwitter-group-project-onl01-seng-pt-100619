<div class="col-md-4">
  <% if flash[:message] %>
  <div class="alert alert-danger">
    <%=flash[:message]%>
  </div>
  <% end %>
  <div class="card">
    <div class="card-header">
        <h1 class="card-title text-primary">Sign Up</h1>
    </div>
    <div class="card-body">
      <form class="" action="/signup" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">@</div>
              </div>
              <input class="form-control form-control-lg" id="username" type="text" name="username" placeholder="Enter a valid username">
            </div>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control form-control-lg" id="email" type="email" name="email" placeholder="Enter a valid email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control form-control-lg" id="password" type="password" name="password" placeholder="Enter your password">
        </div>
        <input class="btn btn-block btn-primary" type="submit" id="submit" value="Sign Up">
        <small class="form-text text-muted"><a href="/login" class="card-link">Already have an account? Login here!</a></small>
      </form>
    </div>
  </div>
</div>